{
    "data": {
        "dataset": "cifar100",
        "root": "./data/cifar100/",
        "batch_size": 128,
        "valid_size": 5000
    },    
    "criterion": {
        "algo": "scan",
        "param":{
            "alpha": 0.5,
            "beta": 5e-7
        }
    },
    "optimizer": {
        "algo": "sgd",
        "param": {
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9
        }
    },
    "scheduler": {
        "enabled": true,
        "type" : "multistep",
        "param" : {
            "gamma" : 0.1,
            "milestones": [40, 80, 110]
        }
    },
    "trainhandler": {
        "seed": 100,
        "device": "cuda:1",
        "path": "./results",
        "name": "resnet18_cifar100_SCAN_copy3_120",
        "num_epochs" : 120,
        "ep_prediction" : true
    },
    "inspectionhandler": {
        "enabled": false,
        "num_path": 4,
        "path_cost": [1,1,1,1],
        "use_small": false,
        "phase": "test"
    },
    "model": {
        "model_type": "scan_resnet18",
        
        "pretrained":{
            "enabled": false,
            "fpath": "./results/trained_models/resnet18_cifar100_pretrained"
        },
        "param": {
            "num_classes": 100
        }
    }
}
{
    "data": {
        "dataset": "cifar100",
        "root": "./data/cifar100/",
        "batch_size": 128,
        "valid_size": 5000
    },    
    "criterion": {
        "algo": "epe",
        "param": {
        }
    },
    "optimizer": {
        "algo": "sgd",
        "param": {
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9
        }
    },
    "scheduler": {
        "enabled": true,
        "type" : "multistep",
        "param" : {
            "milestones" : [100, 200],
            "gamma" : 0.1
        }
    },
    "trainhandler": {
        "seed": 2020,
        "device": "cuda:0",
        "path": "./results",
        "name": "ep_resnet18_cifar100_epe_pt",
        "num_epochs" : 250
    },
    "inspectionhandler": {
        "num_path": 4,
        "path_cost": [1,1,1,1],
        "use_small": false,
        "phase": "test"
    },
    "model": {
        "pretrained":{
            "enabled": true,
            "fpath": "./results/trained_models/resnet18_cifar100"
        },
        "param": {
            "model_type": "ep_resnet18",
            "exit_module" : "epe",
            "start_mark": 0,
            "num_classes": 100
        }
    }
}
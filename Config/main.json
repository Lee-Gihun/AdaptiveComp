{
    "data": {
        "dataset": "cifar100",
        "root": "./data/cifar100/",
        "batch_size": 128,
        "valid_size": 5000
    },    
    "criterion": {
        "algo": "scan",
        "param":{
        }
    },
    "optimizer": {
        "algo": "sgd",
        "param": {
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9
        }
    },
    "scheduler": {
        "enabled": true,
        "type" : "multistep",
        "param" : {
            "gamma" : 0.1,
            "milestones": [75, 130, 180]
        }
    },
    "trainhandler": {
        "seed": 100,
        "device": "cuda:0",
        "path": "./results",
        "name": "test2",
        "num_epochs" : 200,
        "ep_prediction" : true,
        "train": false
    },
    "inspectionhandler": {
        "enabled": true,
        "num_path": 4,
        "path_cost": [1,1,1,1],
        "phase": "test"
    },
    "model": {
        "BackboneNet": "resnet18",
        "EPNet": "scan",
        "param":{
            "num_classes": 100,
            "exit_block_pos": [1,2,3],
            "ep": {
                "stride": [8, 4, 2],
                "conf_type": "sr",
                "selection_type": "selection4"
            }
        },
        "pretrained":{
            "enabled": true,
            "fpath": "./results/trained_models/test"
        }
    }
}
{
    "data": {
        "dataset": "cifar100",
        "root": "./data/cifar100/",
        "batch_size": 128,
        "valid_size": 5000
    },    
    "criterion": {
        "algo": "epe",
        "param":{
            "kl": true,
            "mse": true
        }
    },
    "optimizer": {
        "algo": "sgd",
        "param": {
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9
        }
    },
    "scheduler": {
        "enabled": true,
        "type" : "multistep",
        "param" : {
            "gamma" : 0.1,
            "milestones": [100, 200]
        }
    },
    "trainhandler": {
        "seed": 2020,
        "device": "cuda:0",
        "path": "./results",
        "name": "resnet18_cifar100_scan_adaptfpool_epe_250epoch",
        "num_epochs" : 250,
        "ep_prediction" : true
    },
    "inspectionhandler": {
        "enabled": true,
        "num_path": 4,
        "path_cost": [1,1,1,1],
        "use_small": false,
        "phase": "test"
    },
    "model": {
        "model_type": "ep_resnet18",
        
        "pretrained":{
            "enabled": false,
            "fpath": "./results/trained_models/resnet18_cifar100_pretrained"
        },
        "param": {
            "exit_module": "scan",
            "num_classes": 100
        }
    }
}
{
    "data": {
        "dataset": "cifar100",
        "root": "./data/cifar100/",
        "batch_size": 128,
        "valid_size": 5000
    },    
    "criterion": {
        "algo": "crossentropy",
        "param":{
        }
    },
    "optimizer": {
        "algo": "sgd",
        "param": {
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9
        }
    },
    "scheduler": {
        "enabled": true,
        "type" : "multistep",
        "param" : {
            "gamma" : 0.1,
            "milestones": [40, 80, 110]
        }
    },
    "trainhandler": {
        "seed": 100,
        "device": "cuda:1",
        "path": "./results",
        "name": "resnet10_cifar100",
        "num_epochs" : 120,
        "ep_prediction" : false
    },
    "inspectionhandler": {
        "enabled": false,
        "num_path": 4,
        "path_cost": [1,1,1,1],
        "use_small": false,
        "phase": "test"
    },
    "model": {
        "model_type": "resnet10",
        
        "pretrained":{
            "enabled": false,
            "fpath": "./results/trained_models/resnet18_cifar100_pretrained"
        },
        "param": {
            "num_classes": 100
        }
    }
}